doctype html
html
	head
		meta(charset='utf-8')
		meta(http-equiv='X-UA-Compatible', content='IE=edge')
		meta(content='width=device-width, initial-scale=1', name='viewport')
		meta(content='', name='description')
		meta(content='', name='author')
		style.
			@import url(#{config.hostname}/css/font.css);

	body
		.page-container
			.page-header
				center
					a(href="#{config.hostname}", class="logo")
			
			center
				.page-content
					.icon-bundle.margin-top-30
						img(src="#{config.hostname}/img/email/succeeded.png")
					.title.margin-top-20.
						Your bundle #{param.Bundle.bundleName} is successful!
					.description.margin-top-20.
						Congratulations! You've raised amount of funds you wanted to. View your bundle to withdraw the money.
					.margin-top-30.margin-bottom-20
						a.btn.btn-white-reverse.margin-right-10(href="#{config.hostname}/#!/bundle/view/#{param.Bundle.slug}", target="_blank").
							VIEW BUNDLE
			
			.page-footer
				center.
					&copy; Bundle 2015
