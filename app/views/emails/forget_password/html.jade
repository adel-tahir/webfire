doctype html
html
	head
		meta(charset='utf-8')
		meta(http-equiv='X-UA-Compatible', content='IE=edge')
		meta(content='width=device-width, initial-scale=1', name='viewport')
		meta(content='', name='description')
		meta(content='', name='author')
		style.
			@import url(#{config.hostname}/css/font.css);

	body
		.page-container
			.page-header
				center
					a(href="#{config.hostname}", class="logo")
						img(src="#{config.hostname}/img/logo.png")
			
			center
				.page-content
					.icon-bundle.margin-top-30
						img(src="#{config.hostname}/img/email/password-reset.png")
					.title.margin-top-20.
						Your password has been reset
					.description.margin-top-20.
						To create a new password, please click on the button link below.
					.margin-top-30.margin-bottom-20
						a.btn.btn-white-reverse.margin-right-10(href="#{config.hostname}/#!/reset_password/#{param.token}", target="_blank").
							CREATE NEW PASSWORD
			
			.page-footer
				center.
