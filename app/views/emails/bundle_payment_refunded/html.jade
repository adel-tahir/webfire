doctype html
html
	head
		meta(charset='utf-8')
		meta(http-equiv='X-UA-Compatible', content='IE=edge')
		meta(content='width=device-width, initial-scale=1', name='viewport')
		meta(content='', name='description')
		meta(content='', name='author')
		style.
			@import url(#{config.hostname}/css/font.css);

	body
		.page-container
			.page-header
				center
					a(href="#{config.hostname}", class="logo")
						img(src="#{config.hostname}/img/logo.png")
			
			center
				.page-content
					.icon-bundle.margin-top-30
						img(src="#{config.hostname}/img/email/failed.png")
					.title.margin-top-20.
						Payment refunded for your bundle
					.description.margin-top-20.
						#{param.Contribution.User.firstname} #{param.Contribution.User.surname}'s contribution to your bundle #{Param.Bundle.bundleName} has been reversed.
					.margin-top-30.margin-bottom-20
						a.btn.btn-white-reverse.margin-right-10(href="#{config.hostname}/#!/bundle/view/#{param.Bundle.slug}", target="_blank").
							VIEW BUNDLE
			
			.page-footer
				center.
					&copy; Bundle 2015
